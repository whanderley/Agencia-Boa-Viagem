= semantic_form_for(@pacote) do |f|
  = f.input :titulo, :label => 'Titulo'
  = f.input :descricao, :label => 'Descrição'
  = f.input :preco, :label => 'Preço'
  = f.input :pontos, :label => 'Pontos'
  = f.input :pontos_requeridos, :label => 'Pontos Requeridos'
  = f.input :hotel , :label => 'Hotel', :label_method => :nome
  = f.input :servico , :label => 'Serviços', :label_method => :titulo
  = f.submit 'Salvar'
