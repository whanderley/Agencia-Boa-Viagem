    <th>Email</th>
    <th>Telefone</th>
    <th>Site</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hotels.each do |hotel| %>
  <tr>
    <td><%= hotel.nome %></td>
    <td><%= hotel.endereco %></td>
    <td><%= hotel.email %></td>
    <td><%= hotel.telefone %></td>
    <td><%= hotel.site %></td>
    <td><%= link_to 'Show', hotel %></td>
    <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
    <td><%= link_to 'Destroy', hotel, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

